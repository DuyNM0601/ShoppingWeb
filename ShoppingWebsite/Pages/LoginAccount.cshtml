@page
@model ShoppingWebsite.Pages.LoginAccountModel
@{
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center">
                <h1 class="display-4">Login Page</h1>
            </div>
            <form method="post">
                <div class="form-group">
                    <label for="Username">Username:</label>
                    <input asp-for="@Model.Username" id="Username" type="Username" class="form-control" placeholder="Enter Username" required />
                </div>
                <div class="form-group">
                    <label for="Password">Password:</label>
                    <input asp-for="@Model.Password" id="Password" type="password" class="form-control" placeholder="Enter Password" required />
                </div>
                <button type="submit" class="btn btn-primary btn-block">Login</button>
                
            </form>
        </div>
    </div>
</div>

