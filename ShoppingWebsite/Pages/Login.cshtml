@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
@if (ViewData.ContainsKey("SuccessMessage"))
{
    <div class="alert alert-success">@ViewData["SuccessMessage"]</div>
}


<form method="post">
    <div class="form-group">
        <label asp-for="Customer.ContactName"></label>
        <input asp-for="Customer.ContactName" class="form-control" />
        <span asp-validation-for="Customer.ContactName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.Password"></label>
        <input asp-for="Customer.Password" class="form-control" type="password" />
        <span asp-validation-for="Customer.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
    <a asp-page="/RegisterCustomer" class="btn btn-link">Register</a>

    <!-- Thêm vùng để hiển thị thông báo lỗi -->
    @if (Model.ModelState.ContainsKey(string.Empty))
    {
        <div class="text-danger">@Model.ModelState[string.Empty].Errors.FirstOrDefault().ErrorMessage</div>
    }
</form>
